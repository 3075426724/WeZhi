@import '../../../../../../style/public/admin.wxss';


.main-admin {
	width: 100%;
	box-sizing: border-box;
	padding: 30rpx 20rpx;
}

.hint-desc {
	line-height: 50rpx;
	color: #333 !important;
}

.hint-desc.fmt {
	width: 100%;
	padding: 0rpx 10rpx;
}

.hint-desc.fmt .inner {
	background-color: #f2f2f2;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	padding: 10rpx 10rpx;
	border: 1rpx solid #ddd;
	flex-wrap: wrap;
	font-size: 24rpx;
	font-weight: normal;
}