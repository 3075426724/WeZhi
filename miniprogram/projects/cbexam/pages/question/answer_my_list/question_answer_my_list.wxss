@import "../../../style/skin.wxss";


.main {
	padding: 0
}

.list {
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 20rpx 30rpx 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	overflow: hidden;
}

.list .item {
	padding: 20rpx;
	display: flex;
	border-radius: 14rpx;
	margin-bottom: 20rpx;
	position: relative;
	background-color: #fff;
	overflow: hidden;
	flex-direction: column;
	position: relative;
	overflow: hidden;
}

.list .item .mark {
	position: absolute;
	top: 0rpx;
	right: 0rpx;
	font-size: 24rpx;
	background-color: #f2f2f2;
	padding: 6rpx 20rpx 10rpx;
	border-bottom-left-radius: 10rpx;  
}

.list .item .line-title {
	width: 100%;
	display: flex;
	align-items: center;
	margin-bottom: 10rpx;
}

.list .item .line-title .left {
	font-size: 26rpx;
	position: relative; 
	color: #fff!important;
	height: 60rpx;
	width: 60rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 30%;
}

.list .item .line-title .left .sup {
	position: absolute;
	top: 0;
	right: 0rpx;
	font-size: 20rpx;
	color: #fff;
}

.list .item .line-title .right {
	font-size: 28rpx;
	color: #333;
	margin-left: 20rpx;
}

.list .item .line2 {
	width: 100%;
	font-size: 24rpx;
	color: #999;
	padding: 10rpx 20rpx;
	margin-bottom: 0rpx;
	border-radius: 8rpx;
}

.list .oprt {
	width: 100%;
	display: flex;
	justify-content: flex-end;
	padding: 5rpx 0;
}

.list .oprt>view {
	padding: 8rpx 20rpx;
	font-size: 24rpx;
	background-color: #f2f2f2;
	margin-right: 16rpx;
	border-radius: 8rpx;
}